@BOOK{Krechel2019291,
	author = {Krechel, Thomas and Sanchez, Francisco and Gonzalez-Longatt, Francisco and Chamorro, Harold and Rueda, Jose Luis},
	title = {Transmission system-friendly microgrids: An option to provide ancillary services},
	year = {2019},
	journal = {Distributed Energy Resources in Microgrids: Integration, Challenges and Optimization},
	pages = {291 – 321},
	doi = {10.1016/B978-0-12-817774-7.00011-9},
	url = {https://www.scopus.com/inward/record.uri?eid=2-s2.0-85082061199&doi=10.1016%2fB978-0-12-817774-7.00011-9&partnerID=40&md5=02eb10a7301a7b7f260d3bfa258003aa},
